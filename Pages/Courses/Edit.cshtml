@page
@model EditModel

@{
    ViewData["Title"] = "Edit Course";
}

<br />
<h2 class="text-info">Edit Course</h2>
<br />
<div class="border container" style="padding: 30px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Course.Code" class="control-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Course.Code" class="form-control" />
                <span asp-validation-for="Course.Code" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Course.Title" class="control-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Course.Title" class="form-control" />
                <span asp-validation-for="Course.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Course.Credit" class="control-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Course.Credit" class="form-control" />
                <span asp-validation-for="Course.Credit" class="text-danger"></span>
            </div>


        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Course.TeacherId" class="control-label">Teacher</label>
            </div>
            <div class="col-8">
                <select asp-for="Course.Teacher.Id" class="form-control" asp-items="ViewBag.TeacherName"></select>
                <span asp-validation-for="Course.TeacherId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="hidden" asp-for="Course.Id" />
                <input type="submit" value="Save" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <a class="btn btn-success form-control" asp-page="./Index">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
