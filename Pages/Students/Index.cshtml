@page
@model PerformanceCalculator.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Students";
}

<div class="container row p-0 m-0">
    <div class="col-8">
        <h2 class="text-info"> Student List</h2>
    </div>
    <div class="col-4">
        <p class="mx-4">
            <a class="btn btn-info" asp-page="./Create">Create Student</a>
            <a class="btn btn-primary" asp-page="./Upload">Upload From CSV</a>
        </p>
    </div>
    <div class="col-12 border p-3 mt-3">
        @if (Model.Student.Any())
        {
            <table class="table table-striped border">
                <thead>
                <tr class="table-secondary">
                    <th>
                        Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].RegistrationNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student[0].PhoneNo)
                    </th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Student)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegistrationNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNo)
                        </td>
                        <td>
                            <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>No Student Found.</p>
        }
    </div>
</div>