@page
@model PerformanceCalculator.Pages.Exams.CreateModel

@{
    ViewData["Title"] = "Create";
}


<br/>
<h2 class="text-info">Add New Exam</h2>
<br/>
<div class="border container" style="padding: 30px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Exam.Title" class="control-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Exam.Title" class="form-control"/>
                <span asp-validation-for="Exam.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Exam.TotalMark" class="control-label"></label>

            </div>
            <div class="col-8">
                <input asp-for="Exam.TotalMark" class="form-control"/>
                <span asp-validation-for="Exam.TotalMark" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Exam.Course.Title" class="control-label"></label>
            </div>
            <div class="col-8">
                <select asp-for="Exam.CourseId" class="form-control" asp-items="ViewBag.CourseTitle">
                    <option value="default">---- Please Select One ----</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Exam.Teacher.Id" class="control-label">Teacher</label>

            </div>
            <div class="col-8">
                <select asp-for="Exam.TeacherId" class="form-control" asp-items="ViewBag.TeacherName">
                    <option value="default">---- Please Select One ----</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <a class="btn btn-success form-control" asp-page="./Index">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}