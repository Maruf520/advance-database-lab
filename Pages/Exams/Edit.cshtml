@page
@model PerformanceCalculator.Pages.Exams.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Exam</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exam.Title" class="control-label"></label>
                <input asp-for="Exam.Title" class="form-control"/>
                <span asp-validation-for="Exam.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exam.TotalMark" class="control-label"></label>
                <input asp-for="Exam.TotalMark" class="form-control"/>
                <span asp-validation-for="Exam.TotalMark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Course Name</label>
                <select asp-for="Exam.CourseId" class="form-control" asp-items="ViewBag.CourseTitle"></select>
                <span asp-validation-for="Exam.CourseId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Exam.Id"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}