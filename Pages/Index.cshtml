@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<h1>Index</h1>

<p>
    <a asp-page="./Teachers/Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Teachers[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teachers[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teachers[0].Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teachers[0].PhoneNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teachers[0].Designation)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Teachers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                <a asp-page="./Teachers/Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Teachers/Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Teachers/Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
